<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN"
		"http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds" package-path="hr.crosig.proposal">
	<namespace>AP_Proposal</namespace>
	<entity local-service="true" name="Product" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="productId" primary="true" type="long" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="externalId" type="long" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>

	</entity>
	<entity local-service="true" name="ProductRole" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="productRoleId" primary="true" type="long" />

		<column name="productId" type="long" />

		<!-- Other fields -->

		<column name="roleId" type="long" />

		<finder name="RoleId" return-type="Collection">
			<finder-column name="roleId" />
		</finder>
	</entity>
</service-builder>